<% include ../partials/header %>

<div class="container">
    
   <h2 class="form_mainTitle">Write a comment for <%= foundBlog.name %></h2>
   
   <div class="row">
      <div class="form_center">
         <form action="/blogs/<%= foundBlog._id %>/comments" method="POST">
            <div class="form-group">
               <label for="author">Author</label>
               <input type="text" name="author" placeholder="Type your name..." class="form-control" id="author"></input>
            </div>
            <div class="form-group">
               <label for="commentText">Comment text</label>
               <input type="text" name="text" placeholder="Write something" class="form-control" id="commentText"></input>
            </div>
            <input type="submit" class="btn btn-danger"></input>
         </form>
      </div>
   </div>
   
</div>

<% include ../partials/footer %>